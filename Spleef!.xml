<?xml version="1.0"?>
<map proto="1.3.3">
  <name>Spleef!</name>
  <version>1.0</version>
  <objective>Spleef the other teams to win.</objective>
  <authors>
    <author>Guicotsch</author>
  </authors>
  <rules>
    <rule>You CAN spleef your mates, but they will probably hate you.</rule>
  </rules>
  <teams>
    <team color="black" max="3" max-overfill="3">Black Team</team>
    <team color="red" max="3" max-overfill="3">Red Team</team>
    <team color="blue" max="3" max-overfill="3">Blue Team</team>
    <team color="green" max="3" max-overfill="3">Green Team</team>
    <team color="aqua" max="3" max-overfill="3">Cyan Team</team>
    <team color="light_purple" max="3" max-overfill="3">Magenta Team</team>
    <team color="dark_purple" max="3" max-overfill="3">Purple Team</team>
    <team color="white" max="3" max-overfill="3">White Team</team>
  </teams>
  <kits>
    <kit name="spleef" force="true" potion-particles="false">
      <item slot="0" damage="-3000" enchantment="DIG_SPEED:4" name="Spleef Machine">diamond pickaxe</item>
      <potion duration="oo" amplifier="50">damage resistance</potion>
      <knockback-reduction>0.5</knockback-reduction>
    </kit>
    <kit name="black" parents="spleef">
      <chestplate enchantment="PROTECTION_ENVIRONMENTAL:5" damage="-3000" color="191919">
        leather chestplate
      </chestplate>
    </kit>
    <kit name="red" parents="spleef">
      <chestplate enchantment="PROTECTION_ENVIRONMENTAL:5" damage="-3000" color="993333">
        leather chestplate
      </chestplate>
    </kit>
    <kit name="blue" parents="spleef">
      <chestplate enchantment="PROTECTION_ENVIRONMENTAL:5" damage="-3000" color="334CB2">
        leather chestplate
      </chestplate>
    </kit>
    <kit name="green" parents="spleef">
      <chestplate enchantment="PROTECTION_ENVIRONMENTAL:5" damage="-3000" color="667F33">
        leather chestplate
      </chestplate>
    </kit>
    <kit name="cyan" parents="spleef">
      <chestplate enchantment="PROTECTION_ENVIRONMENTAL:5" damage="-3000" color="4C7F99">
        leather chestplate
      </chestplate>
    </kit>
    <kit name="magenta" parents="spleef">
      <chestplate enchantment="PROTECTION_ENVIRONMENTAL:5" damage="-3000" color="B24CD8">
        leather chestplate
      </chestplate>
    </kit>
    <kit name="purple" parents="spleef">
      <chestplate enchantment="PROTECTION_ENVIRONMENTAL:5" damage="-3000" color="7F3FB2">
        leather chestplate
      </chestplate>
    </kit>
    <kit name="white" parents="spleef">
      <chestplate enchantment="PROTECTION_ENVIRONMENTAL:5" damage="-3000" color="FFFFFF">
        leather chestplate
      </chestplate>
    </kit>
  </kits>
  <disabledamage>
    <damage>fall</damage>
  </disabledamage>
  <toolrepair>
    <tool>leather chestplate</tool>
  </toolrepair>
  <!-- TNT -->
  <instantignite>true</instantignite>
  <yield>0</yield>
  <power>3</power>
  <fuse>2s</fuse>
  
  <killreward>
    <item amount="1">tnt</item>
  </killreward>
  <!-- end of TNT -->

  <spawns>
  <!-- spanws there -->
  <spawn team="Black Team" kit="black" yaw="0">
    <cuboid min="-64,55,-36" max="-65,55,-37" />
  </spawn>
  <spawn team="Red Team" kit="red" yaw="45">
    <cuboid min="-57,55,-21" max="-56,55,-22" />
  </spawn>
  <spawn team="Blue Team" yaw="90">
    <cuboid min="-42,55,-14" max="-41,55,-13" />
  </spawn>
  <spawn team="Green Team" kit="green" yaw="135">
    <cuboid min="-57,55,-5" max="-56,55,-6" />
  </spawn>
  <spawn team="Cyan Team" kit="cyan" yaw="-135">
    <cuboid min="-72,55,-6" max="-73,55,-5" />
  </spawn>
  <spawn team="Magenta Team" kit="magenta" yaw="-45">
    <cuboid min="-72,55,-22" max="-73,55,-21" />
  </spawn>
  <spawn team="Purple Team" kit="purple" yaw="-90">
    <cuboid min="-88,55,-14" max="-87,55,-13" />
  </spawn>
  <spawn team="White Team" kit="white" yaw="-180">
    <cuboid min="-64,55,10" max="-65,55,9" />
  </spawn>
  <!-- end of spawns there -->
  </spawns>
  <playable>
    <cylinder name="main-area" base="-64,76,-13" height="-oo" radius="25" />
  </playable>
  <!-- renewables-->
  <renewables>
    <renewable rate="5" grow="false" particles="true" sound="true">
      <region name="main-area" />
      <renew>stained clay</renew>
      <renew>quartz ore</renew>
      <renew>glass</renew>
    </renewable>
  </renewables>
  <!-- end of renewables-->
  <blitz>
    <time>7m</time>
    <lives>2</lives>
    <broadcastLives>true</broadcastLives>
  </blitz>
  <include src="blitz-global.xml"/>
</map>
