<?xml version="1.0"?>
<map proto="1.3.6">
<name>Christmas Eve</name>
<version>1.0.0</version>
<objective>Eliminate the other team before 5 minutes is up</objective>
<authors>
	<author>RealCrazyCreeper</author>
	<author>Lasse54210</author>
</authors>
<contributors>
	<contributor contribution="Building help and feedback">hansko1031</contributor>
	<contributor contribution="XML assistance">Guicotsch</contributor>
</contributors>
<teams>
	<team color="dark red" max="20">Reindeers</team>
	<team color="light green" max="20">Elves</team>
</teams>
<rage/>
<blitz>
	<time>5m</time>
	<lives>2</lives>
</blitz>
<spawns>
	<spawn team="Reindeers" kit="red" yaw="90">
		<cuboid min="721,27,-760" max="722,27,-763"/>
	</spawn>
	<spawn team="Elves" kit="light green" yaw="-90">
		<cuboid min="612,27,-763" max="611,27,-760"/>
	</spawn>
	<default yaw="180">
		<cuboid min="665,68,-761" max="664,68,-760"/>
	</default>
</spawns>
<kits>
	<kit name="spawn">
		<item slot="0" enchantment="damage all:10" lore="`91-Hit Kill!">iron sword</item>
		<item slot="1" enchantment="arrow damage:10" lore="`91-Shot Kill!">bow</item>
		<item slot="2" amount="1">arrow</item>
		<potion duration="5" amplifier="1">heal</potion>
		<potion duration="5" amplifier="4">damage resistance</potion>
	</kit>
	<kit name="red" parents="spawn">
		<helmet color="993333" locked="false">leather helmet</helmet>
		<chestplate color="993333" locked="false">leather chestplate</chestplate>
		<leggings color="993333" locked="false">leather leggings</leggings>
		<boots color="993333" locked="false">leather boots</boots>
	</kit>
	<kit name="light green" parents="spawn">
		<helmet color="7FCC19" locked="false">leather helmet</helmet>
		<chestplate color="7FCC19" locked="false">leather chestplate</chestplate>
		<leggings color="7FCC19" locked="false">leather leggings</leggings>
		<boots color="7FCC19" locked="false">leather boots</boots>
	</kit>
</kits>
<regions>
	<apply block="deny-all">
		<rectangle min="-oo,-oo" max="oo,oo"/>
	</apply>
</regions>
<timelock>on</timelock>
<killreward>
<item>arrow</item>
</killreward>
<hunger>
<depletion>off</depletion>
</hunger>
<toolrepair>
<tool>iron sword</tool>
<tool>bow</tool>
</toolrepair>
<itemremove>
	<item>arrow</item>
	<item>leather helmet</item>
	<item>leather chestplate</item>
	<item>leather leggings</item>
	<item>leather boots</item>
</itemremove>
<include src="blitz-global.xml"/>
</map>
